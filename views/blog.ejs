<%-include('partials/header.ejs') %>

<form action="/edit/<%= jsonData.title %>" method="GET">
    <div class="flex justify-center mt-24 px-4 py-12 max-w-10xl mx-auto w-2/3 h-3/4 bg-gray-200 border border-gray-300 rounded outline outline-1 outline-black-4 shadow-lg shadow-slate-500">
        <div class="flex flex-col w-2/3">

            <!-- blog title -->
            <div class=""> 
                <h1 class="text-4xl font-semibold px-3 py-4 mb-6 text-center font-serif"><%= jsonData.title %></h1>
            </div>

            <!-- blog body -->
            <div>
                <p class="text-xl px-3 mb text-center"><%= jsonData.blog %></p>
            </div>
        </div>
    </div>

    <div class="flex flex-row-reverse mt-4 mb-24 w-3/4">
            <button type="submit" formaction="/delete/<%= jsonData.title %>" class="ml-3 bg-red-600 px-5 py-3 rounded font-semibold text-white hover:bg-red-800 shadow-md transition duration-300">Delete</button>
            <button type="submit" class="bg-yellow-600 px-5 py-3 rounded font-semibold text-white hover:bg-yellow-800 shadow-md transition duration-300">Edit</button>
    </div>
</form>

<%-include('partials/footer.ejs') %>