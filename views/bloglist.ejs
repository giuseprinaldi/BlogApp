<%-include('partials/header.ejs') %>

<div class="lg:w-1/2 flex mt-24 mb-14 px-4 py-12 max-w-10xl mx-auto w-2/3 h-3/4 bg-gray-200 border border-gray-300 rounded outline outline-1 outline-black-4 shadow-lg shadow-slate-500">
    <div class="flex flex-col w-full justify-center">
        <div class=" flex justify-center h-fit text-center mb-10">
            <h1 class="text-3xl font-semibold font-serif">
                Blog List
            </h1>
        </div>
    

        <div class="flex justify-center h-fit">
            <ul class="list-outside list-decimal text-lg text-blue-700">
            <% if (locals.titlesArray){ %>
                <% titlesArray.forEach(function(title){ %>
                    <li><a href="/blog/<%= title %>"><%= title %></a></li>
                <% }); %>
            <% } %>   
            </ul>
        </div>
    </div>   
    
</div>
<%-include('partials/footer.ejs') %>